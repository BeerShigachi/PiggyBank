
#:include src/kv_files/main_scene.kv
#:include src/kv_files/history_scene.kv
#:include src/kv_files/setting_scene.kv

Root:

    panel_color: [0.2, 0.2, 0.2, 1] if app.theme_cls.theme_style == 'Dark' else [0, 0.7, 1, 1]
    MDBottomNavigationItem:
        name: "main"
        id: main
        icon: 'coin'
        on_tab_release:
            root.change_screen('main')
            main_scene.enter()
        MainScene:
            name: 'main_scene'
            id: main_scene

    MDBottomNavigationItem:
        name: "deposit"
        id: deposit
        icon: 'coins'
        on_tab_release:
            root.change_screen('deposit')
            history_scene.enter()
        HistoryScene:
            name: 'history_scene'
            id: history_scene

    MDBottomNavigationItem:
        name: "setting"
        id: setting
        icon: 'cogs'
        on_tab_release:
            root.change_screen('setting')
        SettingScene:
            name: 'setting_scene'
            id: setting_scene
