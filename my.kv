<MyGrid>

    # todo define objective and budget
    objective: objective # code: id
    budget: budget

    GridLayout:
        cols:1
        size: root.width -100, root.height -100
        pos: 50, 50

        GridLayout:
            cols:2

            Label:
                text: "Objective"
            TextInput:
                id: objective
                multiline: False

            Label:
                text: "Budget"
            TextInput:
                id: budget
                multiline: False
                input_filter: 'int'

        Button:
            text: "Submit"
            on_press: root.btn()
