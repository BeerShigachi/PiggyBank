
#:include src/kv_files/main_scene.kv
#:include src/kv_files/history_scene.kv
#:include src/kv_files/setting_scene.kv
#:include src/kv_files/deposit_sheet.kv


Root:
    orientation: 'vertical'

    ScreenManager
        id: screen_manager
        MainScene:
            name: "Main"
            id: main
        HistoryScene:
            name: "History"
            id: history
        SettingScene:
            name: "Setting"
            id: setting

    MDBottomAppBar:
        MDToolbar:
            title: screen_manager.current
            icon: "currency-usd"
            on_action_button: app.show_deposit_sheet()
            specific_text_color: [1,1,1,1] if app.theme_cls.theme_style == 'Dark' else [0.2, 0.2, 0.2, 1]
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [['home', lambda x: app.change_screen('Main', 'right')]]
            right_action_items: [['book-open-page-variant', lambda x: app.change_screen('History')], ['cogs', lambda x: app.change_screen('Setting')]]



