
#:include src/kv_files/main_scene.kv
#:include src/kv_files/history_scene.kv
#:include src/kv_files/setting_scene.kv
#:include src/kv_files/pop_up_field.kv


Root:
    orientation: 'vertical'

    ScreenManager
        id: screen_manager
        MainScene:
            name: "Home"
            id: home
        HistoryScene:
            name: "History"
            id: history
        SettingScene:
            name: "Setting"
            id: setting

    MDBottomAppBar:
        MDToolbar:
            title: screen_manager.current
            icon: "piggy-bank"
            icon_color: app.theme_cls.primary_color
            on_action_button: app.show_pop_up_field()
            specific_text_color: [1,1,1,1] if app.theme_cls.theme_style == 'Dark' else [0.2, 0.2, 0.2, 1]

            left_action_items: [['home', lambda x: app.change_screen('Home', 'right')]]
            right_action_items: [['database-clock', lambda x: app.change_screen('History')], ['cogs', lambda x: app.change_screen('Setting')]]

