
#:include src/kv_files/main_scene.kv
#:include src/kv_files/history_scene.kv
#:include src/kv_files/setting_scene.kv

Root:
    orientation: 'vertical'

    ScreenManager
        id: screen_manager
        MainScene:
            name: "main"
            id: main
        HistoryScene:
            name: "deposit"
            id: deposit
        SettingScene:
            name: "setting"
            id: setting

    MDToolbar:
        md_bg_color: [0, 0.7, 1, 1]

        MDIconButton:
            icon: 'coins'
            theme_text_color: 'Primary' if screen_manager.current == 'deposit' else 'Hint'
            on_release:
                app.change_screen('deposit', 'right')
            pos_hint: {"center_y": .5}

        MDIconButton:
            icon: 'coin'
            theme_text_color: 'Primary' if screen_manager.current == 'main' else 'Hint'
            on_release:
                app.change_screen('main')
            pos_hint: {"center_y": .5}

        MDIconButton:
            icon: 'cogs'
            theme_text_color: 'Primary' if screen_manager.current == 'setting' else 'Hint'
            on_release:
                app.change_screen('setting', 'left')
            pos_hint: {"center_y": .5}


