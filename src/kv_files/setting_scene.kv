
<SettingScene>

    button_reset: button_reset
    store: store
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1,0.9
        pos_hint: {'top': 1}
        padding: '10dp'

        MDLabel:
            id: store
            text: store.text
            size_hint_y: None
            theme_text_color: 'Primary'
            font_style: 'H6'
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.8, 1

            MDLabel:
                text: 'Set your goal.'
                halign: "left"
                theme_text_color: 'Hint'

            MDIconButton:
                icon: 'trophy'
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root._show_goal_field()


        MDSeparator:
            height: "2dp"
#            size_hint: 0.8, None


        MDLabel:
            text: 'Time Limit'
            size_hint_y: None
            halign: "left"
            theme_text_color: 'Primary'
            font_style: 'H6'
            height: self.texture_size[1]



        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.8, 1

            MDLabel:
                text: 'Set time limit.'
                halign: "left"
                theme_text_color: 'Hint'

            MDIconButton:
                icon: 'timer-sand'
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root._show_deadline_field()

        MDSeparator:
            height: "2dp"

        MDLabel:
            text: 'Reset'
            size_hint_y: None
            halign: "left"
            theme_text_color: 'Primary'
            font_style: 'H6'
            height: self.texture_size[1]


        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.8, 1
            MDLabel:
                text: 'Reset progression.'
                halign: "left"
                theme_text_color: 'Hint'
            MDIconButton:
                id: button_reset
                icon: 'restart'
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.show_alert_dialog()

        MDSeparator:
            height: "2dp"

        MDLabel:
            text: 'Current Theme: {}, {}'.format(app.theme_cls.primary_palette, app.theme_cls.theme_style)
            halign: "left"
            theme_text_color: 'Primary'
            size_hint_y: None
            font_style: 'H6'
            height: self.texture_size[1]

        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.8, 1
            MDLabel:
                text: 'Change theme.'
                halign: "left"
                theme_text_color: 'Hint'
            MDIconButton:
                icon: 'palette'
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.show_theme_picker()
