
<SettingScene>
    objective: objective
    button_objective: button_objective
    button_reset: button_reset

    FloatLayout:

        MDLabel:
            size_hint: 1, 0.25
            pos_hint: {"center_x": .5, "top": 1}
            halign: 'center'
            id: store
            text: 'Goal $ 10000'
            theme_text_color: 'Primary'
            font_size: "25sp"

        BoxLayout:
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": .5, "center_y": .7}

            MDLabel:
                size_hint: .5, 1
                text: 'Your Goal'
                halign: "left"
                theme_text_color: 'Primary'

            MDTextField:
                id: objective
                input_filter: "float"
                hint_text: "Enter amount"
                helper_text: "Only accept positive amount."
                helper_text_mode: "on_error"
                size_hint: .6, None
                pos_hint: {"center_x": .5, "center_y": .5}

            MDRoundFlatButton:
                id: button_objective
                text: "Submit"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.submit_objective()

        BoxLayout:
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": .5, "center_y": .45}
            MDLabel:
                size_hint: .5, 1
                text: 'Reset'
                halign: "left"
                theme_text_color: 'Primary'
            MDLabel:
                text: 'reset progression.'
                halign: "left"
                theme_text_color: 'Primary'
            MDRoundFlatButton:
                id: button_reset
                text: "Submit"
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.show_alert_dialog()



        MDRaisedButton:
            pos_hint: {"center_x": .5,"y": .16}
            text: "Change theme color"
            on_release: root.show_theme_picker()