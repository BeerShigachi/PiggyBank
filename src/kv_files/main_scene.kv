<MainScene>
    name: "main"

    total_saving: total_saving
    store: store
    balance: balance

    FloatLayout:

        MDLabel:
            size_hint: 1, 0.25
            pos_hint: {"center_x": .5, "top": 1}
            halign: 'center'
            id: store
            text: store.text
            theme_text_color: 'Primary'

        MDIcon:
            id: total_saving
            size_hint: 1, 0.25
            pos_hint: {"center_x": .5, "top": 0.65}
            valign: 'bottom'
            halign: 'center'
            theme_text_color: 'Primary'
            icon: 'piggy-bank'
#            font_size: 100

        MDIcon:
            size_hint: 1, 0.25
            pos_hint: {"center_x": .5, "top": 0.5}
            valign: 'top'
            halign: 'center'
            theme_text_color: 'Primary'

            icon: 'scale'
            font_size: "64sp"

        MDLabel:
            size_hint: 1, 0.25
            pos_hint: {"center_x": .5, "top": 0.25}
            halign: 'center'
            valign: 'bottom'
            id: balance
            text: balance.text
            theme_text_color: 'Primary'
