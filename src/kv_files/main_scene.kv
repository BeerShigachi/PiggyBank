<MainScene>
    name: "main"

    total_saving: total_saving
    store: store
    balance: balance

    FloatLayout:

        MDLabel:
            size_hint: 0.3, 0.2
            pos_hint: {"x": .35, "top": 0.8}
            id: store
            text: store.text
            theme_text_color: 'Primary'

        MDIcon:
            size_hint: 0.3, 0.2
            pos_hint: {"x": .35, "top": 0.5}
            icon: 'piggy-bank'
            font_size: "64sp"

        MDIcon:
            size_hint: 0.3, 0.2
            pos_hint: {"x": .35, "top": 0.4}
            id: total_saving
            icon: 'scale'
            font_size: "64sp"

        MDLabel:
            size_hint: 0.3, 0.2
            pos_hint: {"x": .35, "top": 0.2}
            id: balance
            text: balance.text
            theme_text_color: 'Primary'
