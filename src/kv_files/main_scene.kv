<MainScene>
    gif: gif
    circular_bar: circular_bar
    label: label

    FloatLayout:
        MDLabel:
            id: label
            pos_hint: {'center_x': .5, 'center_y': 0.75}
            size_hint_y: 0.2
            halign: 'center'
            theme_text_color: 'Primary'
           # font_size: "40dp"
            font_style: 'H2'
        Image:
            id: gif
            pos_hint: {'center_x': .5, 'center_y': .5}
            source: 'img.gif'
            center: self.parent.center
            size_hint: 0.4, 0.4
            allow_stretch: True
            anim_delay: -1
            anim_loop: 1

        CircularProgressBar:
            id: circular_bar
            widget_size: int(root.height*0.4)
            pos: root.width/2-(self.widget_size/2), root.height/2-(self.widget_size/2)
            thickness: 30
            cap_precisions: 20
            label: root._label
