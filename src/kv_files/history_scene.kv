
<HistoryScene>
    scroll: scroll
    estimation_bar: estimation_bar
    estimation_text: estimation_text
    term_text: term_text
    term_bar: term_bar

    FloatLayout:
        size_hint: 1, 1

        BoxLayout:
#            md_bg_color: [0.2, 0.2, 0.2, 1] if app.theme_cls.theme_style == 'Dark' else [.99,.99,.99,1]
            orientation: "vertical"
            size_hint: 0.8, 0.4
            pos_hint: {"center_x": .5, "top": 1}
            MDLabel:

                text: 'Monthly Achievement'
                theme_text_color: 'Primary'
                font_size: "30sp"
                halign: 'center'

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.3
                MDLabel:
                    id: estimation_text
                    text: estimation_text.text
                    font_size: "14sp"
                    theme_text_color: 'Primary'
                    halign: 'center'
                MDProgressBar:
                    id: estimation_bar
#                    value: estimation_bar.value

            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.3
                MDLabel:
                    id: term_text
                    text: term_text.text
                    theme_text_color: 'Primary'
                    font_size: "14sp"
                    halign: 'center'

                MDProgressBar:
                    id: term_bar
#                    value: term_bar.value



#        CircularProgressBar:
#            id:estimation_bar
#            widget_size: int(root.height/2)
#            pos: root.width/2-(self.widget_size/2), root.height/2-(self.widget_size/2)
##            thickness: 5
#            cap_precisions:100
#            value: estimation_bar.value
#            # todo create color converter then implement color here.
#            # progress_colour: 0.8, 0.8, 0.5, 1
#            background_colour: 1,.3,.3,1
#            label: root._label
        BoxLayout:
            size_hint: 0.9, 0.5
            pos_hint: {"center_x": .5, "y": 0}
            ScrollView:
                scroll_timeout: 100
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    anchor: 'right'
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        BoxLayout:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release:
                app.root.ids['history'].delete_history_log(id_widget)
                app.root.display_balance_bar()

    MDCardSwipeFrontBox:
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
            padding: "8dp"


