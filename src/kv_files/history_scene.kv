<HistoryScene>
    scroll: scroll
    estimation_bar: estimation_bar
    estimation_text: estimation_text

    FloatLayout:

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 0.25
            pos_hint: {"center_x": .5, "y": .6}
            BoxLayout:  # weekly
                orientation: "vertical"
                MDProgressBar:
                    id: estimation_bar
                    max: estimation_bar.max
                    value: estimation_bar.value if estimation_bar.value < estimation_bar.max else estimation_bar.max
                    color: app.theme_cls.accent_color
                MDLabel:
                    id: estimation_text
                    text: estimation_text.text
                    font_size: "27sp"
                    theme_text_color: 'Primary'
                    pos_hint: {"center_x": .5}
                    halign: 'center'
                MDLabel:
                    text: 'weekly rate pacer'
                    color: .5,.5,.5,1
                    halign: 'center'
                    pos_hint: {'y': .8}
                MDDropDownItem:

                    pos_hint: {'center_x': .5}
                    text: '1 week'    #Select 2,3,4…… weeks
                    font_size: '25sp'




        BoxLayout:
            size_hint: 0.8, 0.38
            pos_hint: {"center_x": .5, "y": .1}
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    swipe_distance : 1000
    max_swipe_x : 0.05
    max_opened_x : 130
    anchor: "right"
    MDCardSwipeLayerBox:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release:
                app.root.ids['history'].delete_history_log(id_widget)
                app.root.display_balance_bar()

    MDCardSwipeFrontBox:

        OneLineListItem:
            id: content
            text: root.text
            type_swipe: "hand"
            _no_ripple_effect: True
            padding: "8dp"

