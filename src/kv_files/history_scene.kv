<HistoryScene>
    scroll: scroll
    estimation_bar: estimation_bar
    estimation_text: estimation_text
    term_text: term_text

    FloatLayout:
        CircularProgressBar:
            id:estimation_bar
#            pos: 300, 200
            pos_hint: {'center_x': 0.5, 'center_y': .5}
            widget_size: 100
            thickness: 5
            cap_precision:100
            value: estimation_bar.value
            # todo create color converter then implement color here.
            # progress_colour: 0.8, 0.8, 0.5, 1
            background_colour: 1,.3,.3,1
        BoxLayout:
#            md_bg_color: [0.2, 0.2, 0.2, 1] if app.theme_cls.theme_style == 'Dark' else [.99,.99,.99,1]
            orientation: "vertical"
            size_hint: 0.8, 0.25
            pos_hint: {"center_x": .5, "y": .6}

            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: term_text
                    text: term_text.text
                    theme_text_color: 'Primary'
                    font_size: "27sp"
                    halign: 'center'
                    pos_hint: {'y': .8}
                MDLabel:
                    id: estimation_text
                    text: estimation_text.text
                    font_size: "27sp"
                    theme_text_color: 'Primary'
                    pos_hint: {"center_x": .5}
                    halign: 'right'


                MDLabel:
                    text: 'per month'
                    theme_text_color: 'Primary'
                    halign: 'right'
                    valign: 'top'

        BoxLayout:
            size_hint: 0.9, 0.38
            pos_hint: {"center_x": .5, "y": .1}
            ScrollView:
                scroll_timeout: 100
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    anchor: 'right'
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        BoxLayout:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release:
                app.root.ids['history'].delete_history_log(id_widget)
                app.root.display_balance_bar()

    MDCardSwipeFrontBox:
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
            padding: "8dp"

