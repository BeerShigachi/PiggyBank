<HistoryScene>
    scroll: scroll

    FloatLayout:

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 0.36
            pos_hint: {"center_x": .5, "y": .47}
            BoxLayout:  # weekly
                orientation: "vertical"
                MDProgressBar:
                    value: 50
                    color: app.theme_cls.accent_color
                MDLabel:
                    text: "3333/10000 :weekly"
                    font_size: "20sp"
                    pos_hint: {"center_x": .5}
                    halign: 'center'

            BoxLayout:  # monthly
                orientation: "vertical"
                MDProgressBar:
                    value: 50
                    color: app.theme_cls.accent_color
                MDLabel:
                    id: text
                    text: "3333/10000 :monthly"
                    font_size: "20sp"
                    pos_hint: {"center_x": .5}
                    halign: 'center'


        BoxLayout:
            size_hint: 0.8, 0.35
            pos_hint: {"center_x": .5, "y": .1}
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    swipe_distance : 1000
    max_swipe_x : 0.05
    max_opened_x : 130
    anchor: "right"
    MDCardSwipeLayerBox:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: app.root.ids['history'].delete_history_log(id_widget)

    MDCardSwipeFrontBox:

        OneLineListItem:
            id: content
            text: root.text
            type_swipe: "hand"
            _no_ripple_effect: True
            padding: "8dp"

