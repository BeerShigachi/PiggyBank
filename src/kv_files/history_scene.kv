
<HistoryScene>
    scroll: scroll
    estimation_bar: estimation_bar
    estimation_text: estimation_text
    term_text: term_text
    term_bar: term_bar

    FloatLayout:
        size_hint: 1, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.4
            pos_hint: {"center_x": .5, "top": 1}
            BoxLayout:
                orientation: "vertical"
                size_hint_y: 0.5
                MDLabel:
                    id: estimation_text
                    text: estimation_text.text
                    theme_text_color: 'Primary'
                    font_style: 'H6'

                MDProgressBar:
                    id: estimation_bar
                    color: app.theme_cls.accent_color

            BoxLayout:
                orientation: "vertical"
                size_hint_y: 0.5
                MDLabel:
                    id: term_text
                    text: term_text.text
                    theme_text_color: 'Primary'
                    font_style: 'H6'
                MDProgressBar:
                    id: term_bar
                    color: app.theme_cls.accent_color

        BoxLayout:
            size_hint: 0.9, 0.5
            pos_hint: {"center_x": .5, "y": 0}
            ScrollView:
                scroll_timeout: 100
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    anchor: 'right'
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        BoxLayout:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release:
                app.root.ids['history'].delete_history_log(id_widget)

    MDCardSwipeFrontBox:
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
            padding: "8dp"


