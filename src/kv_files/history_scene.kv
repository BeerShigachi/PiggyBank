<HistoryScene>
    scroll: scroll
    estimation_bar: estimation_bar
    estimation_text: estimation_text
    term_text: term_text

    FloatLayout:

        BoxLayout:
#            md_bg_color: [0.2, 0.2, 0.2, 1] if app.theme_cls.theme_style == 'Dark' else [.99,.99,.99,1]
            orientation: "vertical"
            size_hint: 0.8, 0.25
            pos_hint: {"center_x": .5, "y": .6}
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    id: term_text
                    text: term_text.text
                    theme_text_color: 'Primary'
                    font_size: "27sp"
                    halign: 'center'
                    pos_hint: {'y': .8}
                MDLabel:
                    id: estimation_text
                    text: estimation_text.text
                    font_size: "27sp"
                    theme_text_color: 'Primary'
                    pos_hint: {"center_x": .5}
                    halign: 'right'
                MDProgressBar:
                    id: estimation_bar
                    max: estimation_bar.max
                    value: estimation_bar.value if estimation_bar.value < estimation_bar.max else estimation_bar.max
                    color: app.theme_cls.accent_color
                    valign: 'bottom'
                MDLabel:
                    text: 'per month'
                    theme_text_color: 'Primary'
                    halign: 'right'
                    valign: 'top'

        BoxLayout:
            size_hint: 0.8, 0.38
            pos_hint: {"center_x": .5, "y": .1}
            ScrollView:
                scroll_timeout: 100
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    anchor: 'right'
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        BoxLayout:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release:
                app.root.ids['history'].delete_history_log(id_widget)
                app.root.display_balance_bar()

    MDCardSwipeFrontBox:
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
            padding: "8dp"

