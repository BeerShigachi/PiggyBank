
<HistoryScene>
    scroll: scroll
    estimation_bar: estimation_bar
    estimation_text: estimation_text
    term_text: term_text

    FloatLayout:
        size_hint: 1, 1

        BoxLayout:
#            md_bg_color: [0.2, 0.2, 0.2, 1] if app.theme_cls.theme_style == 'Dark' else [.99,.99,.99,1]
            orientation: "vertical"
            size_hint: 0.8, 0.2
            pos_hint: {"center_x": .5, "top": 1}
            MDLabel:
                text: 'Monthly Achievement'
                theme_text_color: 'Primary'
                font_size: "30sp"
                halign: 'center'

            BoxLayout:
                orientation: "horizontal"
                MDLabel:
                    id: term_text
                    text: term_text.text
                    theme_text_color: 'Primary'
                    font_size: "14sp"
                    halign: 'center'

                MDLabel:
                    id: estimation_text
                    text: estimation_text.text
                    font_size: "14sp"
                    theme_text_color: 'Primary'
                    halign: 'center'


        CircularProgressBar:
            id:estimation_bar
            pos: 300, 500
            widget_size: 300
            cap_precisions:10
            value: estimation_bar.value
            # todo create color converter then implement color here.
            # progress_colour: 0.8, 0.8, 0.5, 1
            background_colour: 1,.3,.3,1
            label: root._label
        BoxLayout:
            size_hint: 0.9, 0.4
            pos_hint: {"center_x": .5, "y": 0}
            ScrollView:
                scroll_timeout: 100
                do_scroll_x: False
                do_scroll_y: True
                MDList:
                    id: scroll
                    padding: 0


<ListItemWithCheckbox>:
    id: id_widget
    size_hint_y: None
    height: content.height
    anchor: 'right'
    type_swipe: "hand"

    MDCardSwipeLayerBox:
        BoxLayout:
        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release:
                app.root.ids['history'].delete_history_log(id_widget)
                app.root.display_balance_bar()

    MDCardSwipeFrontBox:
        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
            padding: "8dp"


